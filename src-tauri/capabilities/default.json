{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "engine",
          "args": true,
          "sidecar": true
        }
      ]
    },
    "shell:allow-open",
    "fs:default",
    "dialog:default",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/Documents/**",
        "/tmp/**"
      ]
    }
  ]
}